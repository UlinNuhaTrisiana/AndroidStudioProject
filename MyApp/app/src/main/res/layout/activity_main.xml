<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/header"
        android:background="@color/dark_blue">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginRight="-25dp"
            android:layout_marginBottom="-40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_coronavirus">

        </ImageView>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_coronavirus">

        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginRight="200dp"
            android:src="@drawable/ic_coronavirus">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/virus"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp">

                </TextView>

                <com.hbb20.CountryCodePicker
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/negara"
                    android:padding="5dp"
                    android:id="@+id/negara"
                    android:layout_marginRight="20dp"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showPhoneCode="false"
                    app:ccp_showFullName="false"
                    app:ccp_textSize="15sp">

                </com.hbb20.CountryCodePicker>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <org.eazegraph.lib.charts.PieChart
                    android:layout_height="190dp"
                    android:layout_width="200dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart"
                    android:padding="10dp"
                    app:egUseCustomInnerValue="true"
                    app:egValueTextSize="1sp"
                    app:egLegendTextSize="1sp"
                    app:egUsePieRotation="true">

                </org.eazegraph.lib.charts.PieChart>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tampil"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/orange">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aktif"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tampil"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/red">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mati"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tampil"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/teal_200">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sembuh"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tampil"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/light_blue">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:layout_marginLeft="12dp"
                            android:layout_gravity="center">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tengah"
        android:layout_below="@+id/header"
        android:layout_marginTop="5dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="5dp"
            android:useDefaultMargins="true">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/light_purple"
                app:strokeColor="@color/dark_blue">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:background="@drawable/tampil"
                            android:backgroundTint="@color/light_blue" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/num"
                            android:id="@+id/kasus"
                            android:textColor="@color/dark_blue"
                            android:layout_weight="1">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:text="@string/i_num"
                            android:id="@+id/kasushariini"
                            android:textColor="@color/blue_text"
                            android:layout_weight="1">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/light_purple"
                app:strokeColor="@color/dark_blue">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:background="@drawable/tampil"
                            android:backgroundTint="@color/orange" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aktif"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/num"
                            android:id="@+id/aktif"
                            android:textColor="@color/dark_blue"
                            android:layout_weight="1">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:text="@string/i_num"
                            android:id="@+id/aktifhariini"
                            android:textColor="@color/orange"
                            android:layout_weight="1">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/light_purple"
                app:strokeColor="@color/dark_blue">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:background="@drawable/tampil"
                            android:backgroundTint="@color/red" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mati"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/num"
                            android:id="@+id/meninggal"
                            android:textColor="@color/dark_blue"
                            android:layout_weight="1">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:text="@string/i_num"
                            android:id="@+id/matihariini"
                            android:textColor="@color/red"
                            android:layout_weight="1">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/light_purple"
                app:strokeColor="@color/dark_blue">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:background="@drawable/tampil"
                            android:backgroundTint="@color/teal_200" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sembuh"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/num"
                            android:id="@+id/sembuh"
                            android:textColor="@color/dark_blue"
                            android:layout_weight="1">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:text="@string/i_num"
                            android:id="@+id/sembuhhariini"
                            android:textColor="@color/teal_200"
                            android:layout_weight="1">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tengah"
        android:background="@drawable/rel_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="@color/light"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/negara"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingStart="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/light"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/kasus"
                android:id="@+id/filter"/>
            <Spinner
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:id="@+id/filterspinner"
                android:layout_marginRight="35dp"
                android:background="@drawable/ic_baseline_arrow_drop_down_24">

            </Spinner>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewRecycler"
            android:layout_marginTop="-5dp"
            android:padding="10dp" />
    </LinearLayout>
</RelativeLayout>